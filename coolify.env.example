# Database Configuration - REQUIRED
# These variables MUST be set in your environment
DB_HOST=db
DB_PORT=3306
DB_NAME=divinosys
DB_USER=your_db_user_here
DB_PASS=your_secure_password_here
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Application Configuration - REQUIRED
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_PORT=80
APP_NAME=DivinoSys
APP_VERSION=2.0

# Protocol Configuration - REQUIRED
# Set to 'https' for production, 'http' for development
APP_PROTOCOL=https
# Set to 'true' to force HTTPS, 'false' to use HTTP
FORCE_HTTPS=true
# Set to 'true' for production domains, 'false' for development
IS_PRODUCTION=true

# Coolify Configuration
# The Coolify will automatically set these based on your domain
# You only need to set FORCE_HTTPS=true for production

# Security
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_LIFETIME=120

# File Upload Configuration
UPLOAD_MAX_SIZE=64M
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Timezone
TZ=America/Sao_Paulo
